<div class="row">
  <div class="col-4">
    <form>
      {{> section-title title="Add A Burger"}}
      <div class="form-group">
        <input class="form-control" type="text" id="burger-input" placeholder="Create your burger here"/>
        <button class="mt-1 btn btn-block btn-success" id="submit-btn">Add Burger</button>
      </div>
    </form>
  </div>
  <div class="col-4 text-center">
    {{> section-title title="Current Burgers"}}
    <ul class="list-group text-center">
    {{#each burgerList}}
      {{#unless devoured}}
        {{> burgers/burger status=""}}
      {{/unless}}
    {{/each}}
    </ul>
  </div>
  <div class="col-4 text-center">
    {{> section-title title="Devoured Burgers"}}
    <ul class="list-group text-center">
      {{#each burgerList}}
        {{#if devoured}}
          {{> burgers/burger status=""}}
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>